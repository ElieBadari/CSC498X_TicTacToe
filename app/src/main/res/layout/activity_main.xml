<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="409dp"
        android:layout_height="409dp"
        android:background="@drawable/board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:layout_margin="18dp"
            android:onClick="tic"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:layout_margin="18dp"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0"
            android:onClick="tic"/>

        <ImageView
            android:id="@+id/img3"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:layout_margin="18dp"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0"
            android:onClick="tic"/>

        <ImageView
            android:id="@+id/img4"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:layout_margin="18dp"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1"
            android:onClick="tic"/>

        <ImageView
            android:id="@+id/img5"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:layout_margin="18dp"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1"
            android:onClick="tic"/>

        <ImageView
            android:id="@+id/img6"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:layout_margin="18dp"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1"
            android:onClick="tic"/>

        <ImageView
            android:id="@+id/img7"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:layout_margin="18dp"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2"
            android:onClick="tic"/>

        <ImageView
            android:id="@+id/img8"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:layout_margin="18dp"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2"
            android:onClick="tic"/>

        <ImageView
            android:id="@+id/img9"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:layout_margin="18dp"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2"
            android:onClick="tic"/>

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>